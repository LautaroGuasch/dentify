<h1 class="fs-2 text-center border-color">Registrate!</h1>
<div class="row">
    <div class="col-md-5 mx-auto p-4 mb-5">
        <div class="card login-styles border-login">
            <div class="card-header">
                Registrar Cuenta
            </div>
            <div class="card-body">
                <img src="/img/logo9.png" class="rounded-circle mx-auto d-block m-4 logo" alt="Logo" width="350">
                <form action="/users/signup" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="nombre" placeholder="Ingrese su nombre"
                            value="{{nombre}}">
                    </div>
                    <div class="form-group mt-4">
                        <input type="text" class="form-control" name="apellido" placeholder="Ingrese su apellido"
                            value="{{apellido}}">
                    </div>
                    <div class="form-group mt-4">
                        <input type="number" class="form-control" name="dni"
                            placeholder="Ingrese su numero su dni" value="{{dni}}">
                    </div>
                    <div class="form-group mt-4">
                        <input type="email" class="form-control" name="email" placeholder="Ingrese su email"
                            value="{{email}}">
                    </div>
                    <div class="form-group mt-4">
                        <input type="number" class="form-control" name="telefono"
                            placeholder="Ingrese su numero de telefono" value="{{telefono}}">
                    </div>
                    <div class="form-group mt-4">
                        <input type="password" class="form-control" name="password" placeholder="Ingrese su contraseña"
                            value="{{password}}">
                    </div>
                    <div class="form-group mt-4">
                        <input type="password" class="form-control" name="confirm_password"
                            placeholder="Ingrese su contraseña nuevamente" value="{{confirm_password}}">
                    </div>
                    <div class="form-group mt-3">
                        <select name="rol" class="form-select">
                            <option>Seleccione el rol</option>
                            <option>Soy Odontólogo</option>
                            <option>Soy Paciente</option>
                        </select>
                    </div>
                    <div class="text-center">
                        <div class=" mt-4 modal-button-save">
                            <button type="submit" class="btn btn-block link-light">Registrarse</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>