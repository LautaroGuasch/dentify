<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar Tratamiento</h3>
        </div>
        <div class="card-body">
            <form action="/treatments/edit-treatment/{{treatment._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Ingrese un titulo"
                    value="{{treatment.title}}">
                </div>
                <div class="form-group" style="margin-top: 3%;">
                    <textarea name="description" class="form-control" placeholder="Ingrese la descripcion">{{treatment.description}}</textarea>
                </div>
                <div class="form-group" style="margin-top: 3%;">
                    <textarea name="pacient" class="form-control" placeholder="Ingrese el nombre del paciente">{{treatment.pacient}}</textarea>
                </div>
                <div class="form-group" style="margin-top: 3%;">
                    <button class="btn btn-primary btn-block" type="submit" >Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>