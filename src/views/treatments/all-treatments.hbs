            {{!-- Modal editar --}}
             <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="Title" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="Title">Editar Tratamiento</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form action="/treatments/edit-treatment/{{_id}}?_method=PUT" method="POST">
                            <div class="modal-body">
                                <input type="hidden" name="_method" value="PUT">
                                <div class="form-group">
                                    <label for="title" class="form-label">Ingresa el titulo</label>
                                    <input type="text" name="title" class="form-control" id="title" placeholder="titulo"
                                    value="{{title}}"
                                        autofocus>
                                </div>
                                <div class="form-group">
                                    <label for="description" class="form-label">Ingrese la descripcion</label>
                                    <textarea name="description" class="form-control" id="description"
                                        placeholder="descripcion" style="margin-top: 3%;">{{description}}</textarea>
                                </div>
                                <div class="form-group">
                                    <label for="pacient" class="form-label">Ingrese el nombre del paciente</label>
                                    <textarea name="pacient" id="pacient" class="form-control" placeholder="paciente"
                                        style="margin-top: 3%;" >{{pacient}}</textarea>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-primary" type="submit">Guardar</button>
                                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

