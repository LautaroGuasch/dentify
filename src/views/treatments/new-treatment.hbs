<div class="col-md-4 mx-auto">
    <div class="card">
    <div class="card-header">
        <h3>Nueva Tratamiento</h3>
    </div>

    <div class="card-body">
        <form action="/treatments/new-treatment" method="POST">
            <div class="form-group">
                <input type="number" name="codigo" class="form-control" placeholder="Codigo..."
                autofocus>
            </div>
            <div class="form-group">
                <textarea name="fecha" class="form-control"
                placeholder="fecha" style="margin-top: 3%;"></textarea>
            </div>
            <div class="form-group mt-4">
                       <select name="caraDiente">

                        <option >Distal</option>

                        <option >Lingual</option>

                        <option >Mesial</option>

                        <option >Palatina</option>

                        <option >Vestibular</option>

                        </select>
            </div> 
            <div class="form-group">
                <textarea name="importe" class="form-control"
                placeholder="importe..." style="margin-top: 3%;"></textarea>
            </div>
            <div class="form-group">
                <textarea name="matriculaOdontologo" class="form-control"
                placeholder="matriculaOdontologo..." style="margin-top: 3%;"></textarea>
            </div>
            <div class="form-group">
                <textarea name="paciente" class="form-control"
                placeholder="paciente..." style="margin-top: 3%;"></textarea>
            </div>
            <div class="form-group">
                <textarea name="observaciones" class="form-control"
                placeholder="observaciones..." style="margin-top: 3%;"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit" style="margin-top: 3%;">
                    Guardar
                </button>
            </div>
        </form>
    </div>
</div>
</div>