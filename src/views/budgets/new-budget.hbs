<div class="container">
    <div class="row">
        <h1 class="fs-2 text-center border-color">Nuevo Presupuesto</h1>
            <div class="d-flex align-items-center">
                <div class="table-responsive col-12 ">
                                    
                    <form action="/presupuesto/new-budget" method="POST">
                        <div class="form-group" style="display: none;">
                            <textarea name="paciente" class="form-control" placeholder="Paciente" style="margin-top: 3%;">{{pacienteSeleccionado._id}}</textarea>
                        </div>
                                                                    
                        <div class="form-group">
                            <h3 class="mt-3">Seleccione los tratamientos que forman parte de este nuevo presupuesto: </h3>
                            <table class="table table-striped table-light table-hover mt-5" id="label">
                                <thead>
                                    <tr>
                                        <th>Tratamiento</th>
                                        <th>Fecha</th>
                                        <th>Importe</th>
                                        <th>Cara del Diente</th>
                                        <th>Descripcion</th>
                                        <th>Seleccionar</th>
                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each treatments}}
                                    <tr>
                                        
                                        <td>{{nombre}}</td>
                                        <td>{{importe}}</td>
                                        <td>{{fecha}}</td>
                                        <td>{{caraDiente}}</td>
                                        <td>{{observaciones}}</td>
                                        <td><input style="margin-left: 26%;" type="checkbox" name="idTratamientos" value="{{_id}}"></td>
                                        
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>

                        <div class="form-group mt-3">
                            <label class="form-label fw-bold" for="fechaVencimiento">Seleccione una fecha de vencimiento:</label>
                            <input type="date" id="datepiker" class="form-control" name="fechaVencimiento">
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label fw-bold" for="observaciones" style="margin-top: 3%;">Ingrese una Observacion:</label>
                            <textarea id="observaciones" name="observaciones" class="form-control"placeholder="Observaciones..." ></textarea>
                        </div>
                        <div class="form-group" style="float: right;">
                            <button class="btn btn-primary btn-block" type="submit" style="margin-top: 3%;">
                                Guardar
                            </button>
                            <a type="button" class="btn btn-danger" href="/presupuesto/{{pacienteSeleccionado._id}}" style="margin-top: 3%;">
                                Cancelar
                            </a>
                        </div>
                    </form>
                                
                </div>
            </div>
        </div>
    </div>
</div>
