                    <form action="/presupuestos/edit-presupuesto/{{presupuesto._id}}?_method=PUT" method="POST">
                    
                                                                                       
                        <div class="form-group">
                            <h3 class="mt-3">Seleccione los tratamientos que forman parte de este nuevo presupuesto: </h3>
                            <table class="table table-striped table-light table-hover mt-5" id="label">
                                <thead>
                                    <tr>
                                        <th>Tratamiento</th>
                                        <th>Importe</th>
                                        <th>Cantidad</th>
                                        <th>Seleccionar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    
                                    {{#each datosJson}}
                                    <tr>
                                        <td>{{Nombre}}</td>
                                        <td>{{Valor}}</td>
                                        <td><input type="number" name="idCantidades" max="32" min="0" value="{{idCantidad}}"></td>
                                        <td><input style="margin-left: 15%;" type="checkbox" name="idTratamientos" value="{{Code}}"></td>      
                                    </tr>
                                    {{/each}}
                                    
                                </tbody>
                            </table>
                        </div>

                        <div class="form-group mt-3">
                            <label class="form-label fw-bold" for="fechaVencimiento">Seleccione una fecha de vencimiento:</label>
                            <input type="date" id="datepiker" class="form-control" name="fechaVencimiento" value="{{presupuesto.fechaVencimiento}}" >
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label fw-bold" for="observaciones" style="margin-top: 3%;">Ingrese una Observacion:</label>
                            <textarea id="observaciones" name="observaciones" class="form-control" placeholder="Observaciones..." >{{presupuesto.observaciones}}</textarea>
                        </div>

                    
                           

                        <div class="form-group mt-2" style="float: right;">
                            <button class="btn btn-primary btn-block" type="submit" style="margin-top: 3%;">
                                Actualizar
                            </button>
                            <a type="button" class="btn btn-danger" href="/presupuesto/{{presupuesto.paciente}}" style="margin-top: 3%;">
                                Cancelar
                            </a>
                        </div>
                    </form>
                                
