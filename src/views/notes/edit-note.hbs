<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar Nota</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Ingrese un titulo"
                    value="{{note.title}}">
                </div>
                <div class="form-group" style="margin-top: 3%;">
                    <textarea name="description" class="form-control" placeholder="Ingrese la descripcion">{{note.description}}</textarea>
                </div>
                <div class="form-group" style="margin-top: 3%;">
                    <button class="btn btn-primary btn-block" type="submit" >Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>