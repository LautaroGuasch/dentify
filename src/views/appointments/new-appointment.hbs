<div class="container">
    <div class="row">
        <h1 class="fs-2 text-center border-color">Nueva Cita</h1>
            <div class="d-flex align-items-center">
                <div class="table-responsive col-12 ">


                    <form action="/appointments/new-appointment" method="POST">
                        <div class="form-group" style="display: none;">
                            <textarea name="paciente" class="form-control" placeholder="Paciente" style="margin-top: 3%;">{{pacienteSeleccionado._id}}</textarea>
                        </div>

                                                                    
                        <div class="form-group">
                            <h3 class="mt-3">Seleccione los presupuestos que quiere agregar a la cita: </h3>
                            <table class="table table-striped table-light table-hover mt-5" id="label">
                                <thead>
                                    <tr>
                                        <th>Nro presupuesto</th>
                                        <th>Fecha de creacion</th>
                                        <th>Fecha de vencimiento</th>
                                        <th>Importe Total</th>
                                        <th>Observaciones</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each presupuestos}}
                                    <tr>
                                        <td>{{codigo}}</td>
                                        <td>{{fecha}}</td>
                                        <td>{{fechaVencimiento}}</td>
                                        <td>${{importeTotal}}</td>
                                        <td>{{observaciones}}</td>
                                        <td><input style="margin-left: 15%;" type="checkbox" name="idPresupuestos" value="{{_id}}"></td>      
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>

                        <div class="form-group mt-3">
                            <label class="form-label fw-bold" for="fecha">Fecha:</label>
                            <input type="date" id="datepiker" class="form-control" name="fecha">
                        </div>
                        
                        <div class="form-group mt-3">
                            <label class="form-label fw-bold" for="hora">Hora:</label>
                            <input type="time"  min="09:00" max="18:00" class="form-control"  name="hora">
                        </div>                
                           

                        <div class="form-group" style="float: right;">
                            <button class="btn btn-primary btn-block" type="submit" style="margin-top: 8%;">
                                Guardar
                            </button>
                            <a type="button" class="btn btn-danger" href="/appointments/{{pacienteSeleccionado._id}}" style="margin-top: 8%;">
                                Cancelar
                            </a>
                        </div>
                    </form>
                                
                </div>
            </div>
        </div>
    </div>
</div>
