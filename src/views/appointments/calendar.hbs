<div class="row d-flex justify-content-md-center">

    <h1 class="fs-2 text-center border-color">
        Citas
    </h1>

    <div class="mt-5 col-10">
        <form action="/appointments/pacient-search" method="POST">
            <div class="d-flex justify-content-end p-2">
                <div class="me-2">
                    <input type="text" class="form-control" placeholder="Ingrese el DNI" name="dniPaciente"
                        value="{{dniPaciente}}">
                </div>
                <button class="button-search" type="submit">
                    Buscar
                </button>
            </div>
        </form>
    </div>
        <div class="d-flex justify-content-evenly"> 
        <form action="/appointments/pacient-filter" method="POST">
        <img class="d-flex" src="/img/calendario4.png" style="height: 250px; width:250px;">
            <label class="mt-1 mb-1 me-2">Ingrese la fecha: </label>
            <div class="me-2 mb-2">
                <input type="date" class="form-control" placeholder="Ingrese la fecha" name="fecha" value="{{fecha}}">
            </div>
            <div class="me-3 mb-2">
                <select name="estado" value="{{estado}}">

                    <option>Todos los presupuestos</option>

                    <option>Aprobado</option>

                    <option>Pagado</option>

                </select>
            </div>
            <button class="button-search" type="submit">
                Filtrar Citas
            </button>
        </form>
        <div class="table-responsive mt-5 col-8">
            <table class="table table-striped table-light table-hover">
                <thead>
                    <tr>
                        <th scope="col">Fecha</th>
                        <th scope="col">Hora</th>
                        <th scope="col">Paciente</th>
                        <th scope="col">DNI</th>
                        <th scope="col">Odont√≥logo</th>
                        <th scope="col" style="padding-left: 2%;">Estado Presupuesto</th>
                        <!--<th scope="col" >Cita</th>-->
                    </tr>
                </thead>
                <tbody>

                    {{#each appointments}}
                    <tr>
                        <th scope="row">{{fecha}}</th>
                        <td>{{hora}}</td>
                        <td>{{paciente}}</td>
                        <td>{{dni}}</td>
                        <td>Ivan Guasch Vives</td>
                        <td><a class="btn btn-outline-success button1 btn-sm p-2"
                                style="width: 50% ;">{{estadoPresupuesto}}</a></td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>
    

</div>



</div>

</div>