<div class="row d-flex justify-content-md-center">

    <h1 class="fs-2 text-center border-color">
    Citas
    </h1>


    <div class="mt-5 col-8">
    <form action="/appointments/pacient-search" method="POST">
        <div class="d-flex justify-content-end p-2">
        <div class="me-2">
            <input type="text" class="form-control" placeholder="Ingrese el DNI" name="dniPaciente" value="{{dniPaciente}}">
        </div>
        <button class="button-search" type="submit">
            Buscar
        </button>
        </div>
    </form>

    <form action="/appointments/pacient-filter" method="POST">
        <div class="d-flex justify-content-start p-2">
        
        <label>Ingrese la fecha: </label>
        <div class="me-2">
            <input type="date" class="form-control" placeholder="Ingrese la fecha" name="fecha" value="{{fecha}}">
        </div>
        <label>Estado de presupuesto</label>
        <div class="me-2">
            <select name="estado" value="{{estado}}">

                <option >Todos los presupuestos</option>

                <option >Aprobado</option>

                <option >Pagado</option>

            </select>
        </div>
        <button class="button-search" type="submit">
            Filtrar Citas
        </button>
        </div>
    </form>


    <div class="table-responsive">
    <table class="table table-striped table-light table-hover">
        <thead>
        <tr>
            <th scope="col">Hora</th>
            <th scope="col">Paciente</th>
            <th scope="col">DNI</th>
            <th scope="col">Odont√≥logo</th>
            <th scope="col" style="padding-left: 2%;">Estado Presupuesto</th>
            <!--<th scope="col" >Cita</th>-->
        </tr>
        </thead>
        <tbody>
        
        <tr>
            <th scope="row">{{nombre}}dfdsfds {{apellido}}</th>
            <td>{{dni}}343443</td>
            <td>36859756</td>
            <td>Ivan Guasch Vives</td>
            <td><a class="btn btn-outline-success button1 btn-sm p-2" style="width: 50% ;">Aprobado</a></td>
        </tr>
        
        {{#each appointments}}
            <tr>
                <th scope="row">{{hora}}</th>
                <td>{{paciente}}</td>
                <td>{{dni}}</td>
                <td>Ivan Guasch Vives</td>
                <td><a class="btn btn-outline-success button1 btn-sm p-2" style="width: 50% ;">{{estadoPresupuesto}}</a></td>
            </tr>
        {{/each}}

        </tbody>
    </table>
    </div>
    </div>


    </div>

    

</div>

